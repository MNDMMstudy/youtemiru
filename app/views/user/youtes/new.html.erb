<div class="container">
  <div class="row">
    <div class="col-12">

<h2 class="ml-5">Youte新規投稿</h2>

    <%= form_with model: @youte, url: user_youtes_path do |f| %>

      <div class="form-group form-inline">
        <label class="col-4 col-form-label">Youte</label>
        <%= f.text_field :youte_text, class:"form-control", placeholder:"Youte本文" %>
      </div>

      <div class="form-group form-inline">
        <label class="col-4 col-form-label">ジャンル選択</label>
          <% f.text_field :youte_genre_id, class:"form-control" %>
            <%= f.select :youte_genre_id, options_from_collection_for_select(YouteGenre.all, :id, :name_was), include_blank: "--選択してください--" %>
      </div>
 <div>
          <%= f.hidden_field :user_id, :value => current_user.id %>
        </div>

    <label class="col-4 mx-auto d-block"><%= f.submit '新規登録', class:"btn btn-success" %></label>

    <% end %>
