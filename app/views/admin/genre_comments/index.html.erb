<div class="container">
  <h2>Commentジャンルタグ新規登録</h2>
  <div class="row">
    <div class="col-10">
      <table>
        <td>Commentジャンルタグ新規登録</td>
        <td>
          <%= form_with model: @comment_genre, url: admin_genre_comments_path do |f| %>
            <%= f.text_field :name, placeholder:"Commentジャンル名" %>
            <input type="submit" name="commit" value="新規登録" class="btn btn-success" data-disable-with="新規登録">
          <% end %>
        </td>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-10">
      <table>
        <thead>
          <tr>
            <th>コメントジャンル一覧</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @comment_genres.each do |genre| %>
           <tr>
            <td><%= genre.name %></td>
             <td>
              <%= link_to  edit_admin_genre_comment_path(genre.id) do %>
                <div class="btn btn-sm btn-success">編集する</div>
              <% end %>
             </td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>