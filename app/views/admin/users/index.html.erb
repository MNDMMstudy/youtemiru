<div class="container">
  <div class="row">
    <div class="col-7">
      <h2>会員一覧</h2>
      <table class="table table-hover table-inverse mt-5">
        <thead>
          <tr>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>通報数</th>
            <th>会員ステータス</th>
          </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
         <tr onclick='window.location="<%= admin_user_path(user.id) %>"' role="link">
          <td>
            <%=  link_to admin_user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <td><%= user.youtes.where(report:true).count + user.comments.where(report:true).count %></td>
          <td>
            <% if user.status == 0 %>
              <p>退職済み</p>
            <% elsif user.status == 1 %>
              <p>制限なし</p>
            <% else %>
              <p>制限中</p>
            <% end %>
          </td>
         </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>