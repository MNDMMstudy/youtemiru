<div class="container">
  <div class="row">
    <div class="col-7">
      <h2>みんなのYoute一覧</h2>
      <p>※最新順に並んでいます</p>
      <%#= render 'user/search' %>
      <%#= render 'user/genres/search_genre' %>
      <table class="table table-hover table-inverse mt-5">
        <thead>
          <tr>
            <th>みんなのYoute</th>
            <th>投稿日時</th>
            <th>タグ</th>
            <th>通報</th>
            <th>表示</th>
          </tr>
        </thead>

        <tbody>
        <% @youtes.each do |youte| %>
         <tr>
          <td>
            <%=  link_to admin_youte_path(youte.id) do %>
              <%= youte.text.truncate(10) %>
            <% end %>
          </td>
          <td><%= youte.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= youte.youte_genre.name %></td>
          <td>
            <% if youte.report == true %>
              <p>通報</p>
            <% else %>
              <p>通報されてない</p>
            <% end %>
          </td>
          <td>
            <% if youte.indicate == true %>
              <p>表示中</p>
            <% else %>
              <p>非表示中</p>
            <% end %>
          </td>
         </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>